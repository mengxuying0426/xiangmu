<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:id="@+id/layout_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_ic2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">


                        <RadioButton
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:id="@+id/t_no"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableRight="@drawable/radio_button_diy"
                            android:text="不开启" />

                        <RadioButton
                            android:id="@+id/t_10"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableRight="@drawable/radio_button_diy"
                            android:text="10分钟"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <RadioButton
                            android:id="@+id/t_20"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableRight="@drawable/radio_button_diy"
                            android:text="20分钟"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <RadioButton
                            android:id="@+id/t_30"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableRight="@drawable/radio_button_diy"
                            android:text="30分钟"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>


                        <RadioButton
                            android:id="@+id/t_60"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableRight="@drawable/radio_button_diy"
                            android:text="60分钟"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>


                        <RadioButton
                            android:id="@+id/t_90"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableRight="@drawable/radio_button_diy"
                            android:text="90分钟"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                        <RadioButton
                            android:id="@+id/t_diy"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableRight="@drawable/radio_button_diy"
                            android:text="自定义"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>

                    </RadioGroup>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="25dp">
                        <TextView
                            android:id="@+id/tv_f_dld"
                            android:layout_width="0dp"
                            android:layout_weight="1.99"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:background="@drawable/circle_ic2"
                            android:gravity="center"
                            android:text="取消"
                            android:textColor="#000"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/tv_f_ok"
                            android:layout_width="0dp"
                            android:layout_weight="1.99"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:background="@drawable/circle_ic2"
                            android:gravity="center"
                            android:text="确定"
                            android:textColor="#000"
                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>